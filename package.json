{
  "name": "node-template",
  "version": "1.0.0",
  "description": "Proyecto Node.js con Express y TailwindCSS",
  "main": "src/app.js",
  "scripts": {
    "start": "node src/app.js",
    "dev": "concurrently \"nodemon src/app.js\" \"npx tailwindcss -i ./src/public/css/styles.css -o ./src/public/css/output.css --watch\"",
    "build": "npx tailwindcss -i ./src/public/css/styles.css -o ./src/public/css/output.css --minify"
  },
  "keywords": [
    "node",
    "express",
    "tailwindcss"
  ],
  "author": "AzalDevX",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.14",
    "concurrently": "^9.1.0",
    "nodemon": "^2.0.22",
    "postcss": "^8.4.23",
    "tailwindcss": "^3.3.2"
  }
}
